{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Inscription{% endblock %}

{% block body %}
    <section class="container">
        <h1>Inscrivez vous</h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col-4">{{ form_row(form.email) }}</div>
            <div class="col-4">{{ form_row(form.nom) }}</div>
            <div class="col-4">{{ form_row(form.prenom) }}</div>
            <div class="col-4">{{ form_row(form.password) }}</div>
        </div>

        <button type="submit" class="btn btn-outline-success">S'inscrire</button>

        {{ form_end(form) }}

    </section>
{% endblock %}